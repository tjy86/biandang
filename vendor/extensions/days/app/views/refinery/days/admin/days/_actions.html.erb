<ul>
  <% if ::Refinery::Days::Admin::DaysController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.days_admin_days_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_days_admin_day_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Days::Admin::DaysController.sortable? && ::Refinery::Days::Day.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Days"),
                 refinery.days_admin_days_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Days"),
                 refinery.days_admin_days_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
