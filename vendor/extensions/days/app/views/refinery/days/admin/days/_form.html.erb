<%= form_for [refinery, :days_admin, @day] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @day,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :day -%>
    <%= f.text_field :day, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :neighborhood -%>
    <%= f.text_field :neighborhood  -%>

  </div>
  
  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.days.admin.days.day'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @day.day) %>
<% end -%>
