<% content_for :body_content_title do %>
  <%= @menu.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @menu.name %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @menu.price %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @menu.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @menu.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="menus">
      <% @menus.each do |menu| %>
        <li>
          <%= link_to menu.name, refinery.menus_menu_path(menu) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
